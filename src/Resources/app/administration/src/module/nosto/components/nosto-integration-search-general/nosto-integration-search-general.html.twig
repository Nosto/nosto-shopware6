{% block nosto_integration_content_card_channel_config_features_flags_card %}
    <sw-card
        class="sw-card--grid"
        :title="$tc('nosto.configuration.search-navigation.cardTitle')"
        positionIdentifier="nosto-integratoion-search-general"
    >
        {% block nosto_integration_search_active %}
            <sw-inherit-wrapper
                :value="currentConfig['enableSearch']"
                :inheritedValue="configKey === null ? null : configs['null']['enableSearch']"
                @update:value="onUpdateValue('enableSearch', $event)"
            >
                <template #content="props">
                    <sw-switch-field
                        name="enableSearch"
                        :map-inheritance="props"
                        :label="$tc('nosto.configuration.search-navigation.enableSearch.label')"
                        :help-text="$tc('nosto.configuration.search-navigation.enableSearch.helpText')"
                        :disabled="props.isInherited"
                        :value="props.currentValue"
                        @update:value="onUpdateValue('enableSearch', $event)"
                    />
                </template>
            </sw-inherit-wrapper>
        {% endblock %}

        {% block nosto_integration_navigation_active %}
            <sw-inherit-wrapper
                :value="currentConfig['enableNavigation']"
                :inheritedValue="configKey === null ? null : configs['null']['enableNavigation']"
                @update:value="onUpdateValue('enableNavigation', $event)"
            >
                <template #content="props">
                    <sw-switch-field
                        name="enableNavigation"
                        :map-inheritance="props"
                        :label="$tc('nosto.configuration.search-navigation.enableNavigation.label')"
                        :help-text="$tc('nosto.configuration.search-navigation.enableNavigation.helpText')"
                        :disabled="props.isInherited"
                        :value="props.currentValue"
                        @update:value="onUpdateValue('enableNavigation', $event)"
                    />
                </template>
            </sw-inherit-wrapper>
        {% endblock %}
    </sw-card>
{% endblock %}
