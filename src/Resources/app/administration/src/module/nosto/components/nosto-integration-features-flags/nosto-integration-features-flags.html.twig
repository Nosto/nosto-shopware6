{% block nosto_integration_content_card_channel_config_features_flags_card %}
    <sw-card
        class="sw-card--grid"
        :title="$tc('nosto.configuration.featuresFlags.cardTitle')"
        positionIdentifier="nosto-integration-features-flags"
    >

        {% block nosto_integration_feature_product_identifier %}
            <sw-inherit-wrapper v-model="actualConfigData['NostoIntegration.config.productIdentifier']"
                                :inheritedValue="selectedSalesChannelId === null ? null : allConfigs['null']['NostoIntegration.config.productIdentifier']"
                                :label="$tc('nosto.configuration.featuresFlags.productIdentifier')"
                                :help-text="$tc('nosto.configuration.featuresFlags.productIdentifierHelpText')">
                <template #content="props">
                    <sw-single-select name="NostoIntegration.config.productIdentifier"
                                      labelProperty="label"
                                      valueProperty="value"
                                      :options="createProductIdentifierOptions"
                                      :isInherited="props.isInherited"
                                      :disabled="props.isInherited"
                                      show-clearable-button
                                      :value="props.currentValue"
                                      @change="props.updateCurrentValue">
                    </sw-single-select>
                </template>
            </sw-inherit-wrapper>
        {% endblock %}

        {% block nosto_integration_feature_ratings_reviews %}
            <sw-inherit-wrapper v-model="actualConfigData['NostoIntegration.config.ratingsReviews']"
                                :inheritedValue="selectedSalesChannelId === null ? null : allConfigs['null']['NostoIntegration.config.ratingsReviews']"
                                :label="$tc('nosto.configuration.featuresFlags.enableRatingsReviews')"
                                :help-text="$tc('nosto.configuration.featuresFlags.enableRatingsReviewsHelpText')">

                <template #content="props">
                    <sw-single-select name="NostoIntegration.config.ratingsReviews"
                                      labelProperty="label"
                                      valueProperty="value"
                                      :options="createRatingsAndReviewOptions"
                                      :isInherited="props.isInherited"
                                      :disabled="props.isInherited"
                                      show-clearable-button
                                      :value="props.currentValue"
                                      @change="props.updateCurrentValue">
                    </sw-single-select>
                </template>
            </sw-inherit-wrapper>
        {% endblock %}


        {% block nosto_integration_feature_stock_field %}
            <sw-inherit-wrapper v-model="actualConfigData['NostoIntegration.config.stockField']"
                                :inheritedValue="selectedSalesChannelId === null ? null : allConfigs['null']['NostoIntegration.config.stockField']"
                                :label="$tc('nosto.configuration.featuresFlags.stockField')"
                                :help-text="$tc('nosto.configuration.featuresFlags.stockFieldHelpText')">

                <template #content="props">
                    <sw-single-select name="NostoIntegration.config.stockField"
                                      labelProperty="label"
                                      valueProperty="value"
                                      :options="createStockOptions"
                                      :isInherited="props.isInherited"
                                      :disabled="props.isInherited"
                                      show-clearable-button
                                      :value="props.currentValue"
                                      @change="props.updateCurrentValue">
                    </sw-single-select>
                </template>
            </sw-inherit-wrapper>
        {% endblock %}

