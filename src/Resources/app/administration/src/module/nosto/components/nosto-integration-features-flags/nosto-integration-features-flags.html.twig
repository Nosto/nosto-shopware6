{% block nosto_integration_content_card_channel_config_features_flags_card %}
    <sw-card class="sw-card--grid"
             :title="$tc('nosto.configuration.featuresFlags.cardTitle')">

        {% block nosto_integration_feature_ratings_reviews %}
            <sw-inherit-wrapper v-model="actualConfigData['NostoIntegration.settings.flags.ratingsReviews']"
                                :inheritedValue="selectedSalesChannelId === null ? null : allConfigs['null']['NostoIntegration.settings.flags.ratingsReviews']"
                                :label="$tc('nosto.configuration.featuresFlags.enableRatingsReviews')">

                <template #content="props">
                    <sw-single-select name="NostoIntegration.settings.flags.ratingsReviews"
                                      labelProperty="label"
                                      valueProperty="value"
                                      :options="createRatingsAndReviewOptions"
                                      :isInherited="props.isInherited"
                                      :disabled="props.isInherited"
                                      show-clearable-button
                                      :value="props.currentValue"
                                      @change="props.updateCurrentValue">
                    </sw-single-select>
                </template>
            </sw-inherit-wrapper>
        {% endblock %}

        {% block nosto_integration_feature_variations %}
            <sw-inherit-wrapper v-model="actualConfigData['NostoIntegration.settings.flags.variations']"
                                :inheritedValue="selectedSalesChannelId === null ? null : allConfigs['null']['NostoIntegration.settings.flags.variations']">

                <template #content="props">
                    <sw-switch-field
                            :map-inheritance="props"
                            :label="$tc('nosto.configuration.featuresFlags.enableVariations')"
                            :disabled="props.isInherited"
                            :value="props.currentValue"
                            @change="props.updateCurrentValue"
                    />
                </template>
            </sw-inherit-wrapper>
        {% endblock %}

        {% block nosto_integration_feature_product_properties %}
            <sw-inherit-wrapper v-model="actualConfigData['NostoIntegration.settings.flags.productProperties']"
                                :inheritedValue="selectedSalesChannelId === null ? null : allConfigs['null']['NostoIntegration.settings.flags.productProperties']">

                <template #content="props">
                    <sw-switch-field
                            :map-inheritance="props"
                            :label="$tc('nosto.configuration.featuresFlags.enableProductProperties')"
                            :disabled="props.isInherited"
                            :value="props.currentValue"
                            @change="props.updateCurrentValue"
                    />
                </template>
            </sw-inherit-wrapper>
        {% endblock %}

        {% block nosto_integration_feature_alternate_image %}
            <sw-inherit-wrapper v-model="actualConfigData['NostoIntegration.settings.flags.alternateImages']"
                                :inheritedValue="selectedSalesChannelId === null ? null : allConfigs['null']['NostoIntegration.settings.flags.alternateImages']">

                <template #content="props">
                    <sw-switch-field
                            :map-inheritance="props"
                            :label="$tc('nosto.configuration.featuresFlags.enableAlternateImages')"
                            :disabled="props.isInherited"
                            :value="props.currentValue"
                            @change="props.updateCurrentValue"
                    />
                </template>
            </sw-inherit-wrapper>
        {% endblock %}

        {% block nosto_integration_feature_inventory %}
            <sw-inherit-wrapper v-model="actualConfigData['NostoIntegration.settings.flags.inventory']"
                                :inheritedValue="selectedSalesChannelId === null ? null : allConfigs['null']['NostoIntegration.settings.flags.inventory']">

                <template #content="props">
                    <sw-switch-field
                            :map-inheritance="props"
                            :label="$tc('nosto.configuration.featuresFlags.enableInventory')"
                            :disabled="props.isInherited"
                            :value="props.currentValue"
                            @change="props.updateCurrentValue"
                    />
                </template>
            </sw-inherit-wrapper>
        {% endblock %}

        {% block nosto_integration_feature_customer_data %}
            <sw-inherit-wrapper v-model="actualConfigData['NostoIntegration.settings.flags.customerDataToNosto']"
                                :inheritedValue="selectedSalesChannelId === null ? null : allConfigs['null']['NostoIntegration.settings.flags.customerDataToNosto']">

                <template #content="props">
                    <sw-switch-field
                            :map-inheritance="props"
                            :label="$tc('nosto.configuration.featuresFlags.enableCustomerDataToNosto')"
                            :disabled="props.isInherited"
                            :value="props.currentValue"
                            @change="props.updateCurrentValue"
                    />
                </template>
            </sw-inherit-wrapper>
        {% endblock %}

        {% block nosto_integration_feature_inavtive_products %}
            <sw-inherit-wrapper v-model="actualConfigData['NostoIntegration.settings.flags.syncInactiveProducts']"
                                :inheritedValue="selectedSalesChannelId === null ? null : allConfigs['null']['NostoIntegration.settings.flags.syncInactiveProducts']">

                <template #content="props">
                    <sw-switch-field
                            :map-inheritance="props"
                            :label="$tc('nosto.configuration.featuresFlags.enableSyncInactiveProducts')"
