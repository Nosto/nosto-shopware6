                    />
                </template>
            </sw-inherit-wrapper>
        {% endblock %}

        {% block nosto_integration_feature_recommendations %}
            <sw-inherit-wrapper v-model="actualConfigData['NostoIntegration.settings.flags.reloadRecommendations']"
                                :inheritedValue="selectedSalesChannelId === null ? null : allConfigs['null']['NostoIntegration.settings.flags.reloadRecommendations']">

                <template #content="props">
                    <sw-switch-field
