                    />
                </template>
            </sw-inherit-wrapper>
        {% endblock %}

        {% block nosto_integration_feature_published_date %}
            <sw-inherit-wrapper v-model="actualConfigData['NostoIntegration.settings.flags.productPublishedDateTagging']"
                                :inheritedValue="selectedSalesChannelId === null ? null : allConfigs['null']['NostoIntegration.settings.flags.productPublishedDateTagging']">

                <template #content="props">
                    <sw-switch-field
                            :map-inheritance="props"
