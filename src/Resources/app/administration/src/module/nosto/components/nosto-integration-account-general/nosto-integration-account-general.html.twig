{% block nosto_integration_account_component_general %}
    <sw-card title="Account settings">
        {% block nosto_integration_account_id %}
            <sw-inherit-wrapper v-model="actualConfigData['NostoIntegration.settings.accounts.accountID']"
                                :inheritedValue="selectedSalesChannelId === null ? null : allConfigs['null']['NostoIntegration.settings.accounts.accountID']"
                                :customInheritationCheckFunction="checkTextFieldInheritance">
                <template #content="props">
                    <sw-field
                            :label="$tc('nosto.configuration.account.idTitle')"
                            type="text"
                            :map-inheritance="props"
                            :value="props.currentValue"
                            :disabled="props.isInherited"
                            :error="errorStates.accountID ?? null"
                            @change="checkValue('accountID', props)"
                            required
                            name="NostoIntegration.settings.accounts.accountID"
                            @input="props.updateCurrentValue"></sw-field>
                </template>
            </sw-inherit-wrapper>
        {% endblock %}
        {% block nosto_integration_account_token %}
            <sw-inherit-wrapper v-model="actualConfigData['NostoIntegration.settings.accounts.productToken']"
                                :inheritedValue="selectedSalesChannelId === null ? null : allConfigs['null']['NostoIntegration.settings.accounts.productToken']"
                                :customInheritationCheckFunction="checkTextFieldInheritance">
                <template #content="props">
                    <sw-field
                            :label="$tc('nosto.configuration.account.productTokenTitle')"
                            type="password"
                            :map-inheritance="props"
                            :value="props.currentValue"
                            :disabled="props.isInherited"
                            :error="errorStates.productToken ?? null"
                            required
                            @change="checkValue('productToken', props)"
                            name="NostoIntegration.settings.accounts.productToken"
                            @input="props.updateCurrentValue"></sw-field>
                </template>
            </sw-inherit-wrapper>
            <sw-inherit-wrapper v-model="actualConfigData['NostoIntegration.settings.accounts.emailToken']"
                                :inheritedValue="selectedSalesChannelId === null ? null : allConfigs['null']['NostoIntegration.settings.accounts.emailToken']"
                                :customInheritationCheckFunction="checkTextFieldInheritance">
                <template #content="props">
                    <sw-field
                            :label="$tc('nosto.configuration.account.emailTokenTitle')"
                            type="password"
                            :map-inheritance="props"
                            :value="props.currentValue"
                            :disabled="props.isInherited"
                            :error="errorStates.emailToken ?? null"
                            @change="checkValue('emailToken', props)"
                            required
                            name="NostoIntegration.settings.accounts.emailToken"
                            @input="props.updateCurrentValue"></sw-field>
                </template>
            </sw-inherit-wrapper>
            <sw-inherit-wrapper v-model="actualConfigData['NostoIntegration.settings.accounts.appToken']"
