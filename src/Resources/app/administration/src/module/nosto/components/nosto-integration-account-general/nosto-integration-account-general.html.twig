{% block nosto_integration_account_component_general %}
    <sw-card :title="$tc('nosto.configuration.account.title')" class="od-nosto-account-card">
        {% block nosto_integration_account_enabled %}
            <sw-inherit-wrapper v-model="actualConfigData['overdose_nosto.config.isEnabled']"
                                :inheritedValue="selectedSalesChannelId === null ? null : allConfigs['null']['overdose_nosto.config.isEnabled']">
                <template #content="props">
                    <sw-switch-field
                        :map-inheritance="props"
                        :label="$tc('nosto.configuration.account.enabledTitle')"
                        :help-text="$tc('nosto.configuration.account.enabledHelpText')"
                        :disabled="props.isInherited"
                        :value="props.currentValue"
                        @change="props.updateCurrentValue"
                    />
                </template>
            </sw-inherit-wrapper>
        {% endblock %}

        {% block nosto_integration_account_api_validate %}
            <sw-button-process variant="ghost"
                               class="validate-btn"
                               :isLoading="apiValidationInProgress"
                               @click="validateApiCredentials">
                {{ $tc('nosto.configuration.account.apiValidation.buttonLabel') }}
            </sw-button-process>
        {% endblock %}

        {% block nosto_integration_account_id %}
            <sw-inherit-wrapper v-model="actualConfigData['overdose_nosto.config.accountID']"
                                :inheritedValue="selectedSalesChannelId === null ? null : allConfigs['null']['overdose_nosto.config.accountID']"
                                :customInheritationCheckFunction="checkTextFieldInheritance">
                <template #content="props">
                    <sw-field
                            :label="$tc('nosto.configuration.account.idTitle')"
                            :help-text="$tc('nosto.configuration.account.idHelpText')"
                            type="text"
                            :map-inheritance="props"
                            :value="props.currentValue"
                            :disabled="props.isInherited"
                            :error="hasError(props.currentValue)"
                            required
                            name="overdose_nosto.config.accountID"
                            @input="updateCurrentValue($event, props)"></sw-field>
                </template>
            </sw-inherit-wrapper>
        {% endblock %}
        {% block nosto_integration_account_name %}
            <sw-inherit-wrapper v-model="actualConfigData['overdose_nosto.config.accountName']"
                                :inheritedValue="selectedSalesChannelId === null ? null : allConfigs['null']['overdose_nosto.config.accountName']"
                                :customInheritationCheckFunction="checkTextFieldInheritance">
                <template #content="props">
                    <sw-field
                        :label="$tc('nosto.configuration.account.nameTitle')"
                        :help-text="$tc('nosto.configuration.account.nameHelpText')"
                        type="text"
                        :map-inheritance="props"
                        :value="props.currentValue"
                        :disabled="props.isInherited"
                        :error="hasError(props.currentValue)"
                        required
                        name="overdose_nosto.config.accountName"
                        @input="updateCurrentValue($event, props)"></sw-field>
                </template>
            </sw-inherit-wrapper>
        {% endblock %}
        {% block nosto_integration_account_token %}
            <sw-inherit-wrapper v-model="actualConfigData['overdose_nosto.config.productToken']"
                                :inheritedValue="selectedSalesChannelId === null ? null : allConfigs['null']['overdose_nosto.config.productToken']"
                                :customInheritationCheckFunction="checkTextFieldInheritance">
                <template #content="props">
                    <sw-field
                            :label="$tc('nosto.configuration.account.productTokenTitle')"
                            :help-text="$tc('nosto.configuration.account.productTokenHelpText')"
                            type="password"
                            :map-inheritance="props"
                            :value="props.currentValue"
                            :disabled="props.isInherited"
                            required
                            :error="hasError(props.currentValue)"
                            name="overdose_nosto.config.productToken"
                            @input="updateCurrentValue($event, props)"></sw-field>
                </template>
            </sw-inherit-wrapper>
            <sw-inherit-wrapper v-model="actualConfigData['overdose_nosto.config.emailToken']"
                                :inheritedValue="selectedSalesChannelId === null ? null : allConfigs['null']['overdose_nosto.config.emailToken']"
                                :customInheritationCheckFunction="checkTextFieldInheritance">
                <template #content="props">
                    <sw-field
                            :label="$tc('nosto.configuration.account.emailTokenTitle')"
                            :help-text="$tc('nosto.configuration.account.emailTokenHelpText')"
                            type="password"
                            :map-inheritance="props"
                            :value="props.currentValue"
                            :disabled="props.isInherited"
                            :error="hasError(props.currentValue)"
                            required
                            name="overdose_nosto.config.emailToken"
                            @input="updateCurrentValue($event, props)"></sw-field>
                </template>
            </sw-inherit-wrapper>
            <sw-inherit-wrapper v-model="actualConfigData['overdose_nosto.config.appToken']"
                                :inheritedValue="selectedSalesChannelId === null ? null : allConfigs['null']['overdose_nosto.config.appToken']"
                                :customInheritationCheckFunction="checkTextFieldInheritance">
                <template #content="props">
                    <sw-field
                            :label="$tc('nosto.configuration.account.appTokenTitle')"
                            :help-text="$tc('nosto.configuration.account.appTokenHelpText')"
                            type="password"
                            :map-inheritance="props"
                            :value="props.currentValue"
                            :disabled="props.isInherited"
                            :error="hasError(props.currentValue)"
                            required
                            name="overdose_nosto.config.appToken"
                            @input="updateCurrentValue($event, props)"></sw-field>
                </template>
            </sw-inherit-wrapper>
        {% endblock %}
    </sw-card>
{% endblock %}
