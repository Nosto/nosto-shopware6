{% block nosto_integration_account_component_general %}
    <sw-card
        :title="$tc('nosto.configuration.account.title')"
        class="nosto-integration-account-card"
        positionIdentifier="nosto-integration-account-general"
    >
        <template v-if="configKey">
            {% block nosto_integration_account_enabled %}
                <sw-switch-field
                    :value="currentConfig['isEnabled']"
                    :label="$tc('nosto.configuration.account.enabledTitle')"
                    :help-text="$tc('nosto.configuration.account.enabledHelpText')"
                    @update:value="onUpdateValue('isEnabled', $event)"
                />
            {% endblock %}

            {% block nosto_integration_account_api_validate %}
                <sw-button-process
                    variant="ghost"
                    class="validate-btn"
                    :isLoading="apiValidationInProgress"
                    :processSuccess="false"
                    @click="validateApiCredentials"
                >
                    {{ $tc('nosto.configuration.account.apiValidation.buttonLabel') }}
                </sw-button-process>
            {% endblock %}

            {% block nosto_integration_account_id %}
                <sw-text-field
                    :value="currentConfig['accountID']"
                    :label="$tc('nosto.configuration.account.idTitle')"
                    :help-text="$tc('nosto.configuration.account.idHelpText')"
                    :error="hasError(currentConfig['accountID'])"
                    required
                    name="accountID"
                    @update:value="onUpdateValue('accountID', $event)"
                />
            {% endblock %}
            {% block nosto_integration_account_name %}
                <sw-text-field
                    :value="currentConfig['accountName']"
                    :label="$tc('nosto.configuration.account.nameTitle')"
                    :help-text="$tc('nosto.configuration.account.nameHelpText')"
                    :error="hasError(currentConfig['accountName'])"
                    required
                    name="accountName"
                    @update:value="onUpdateValue('accountName', $event)"
                />
            {% endblock %}
            {% block nosto_integration_account_token %}
                <sw-password-field
                    :value="currentConfig['productToken']"
                    :label="$tc('nosto.configuration.account.productTokenTitle')"
                    :help-text="$tc('nosto.configuration.account.productTokenHelpText')"
                    required
                    :error="hasError(currentConfig['productToken'])"
                    name="productToken"
                    @update:value="onUpdateValue('productToken', $event)"
                />
                <sw-password-field
                    :value="currentConfig['emailToken']"
                    :label="$tc('nosto.configuration.account.emailTokenTitle')"
                    :help-text="$tc('nosto.configuration.account.emailTokenHelpText')"
                    :error="hasError(currentConfig['emailToken'])"
                    required
                    name="emailToken"
                    @update:value="onUpdateValue('emailToken', $event)"
                />
                <sw-password-field
                    :value="currentConfig['appToken']"
                    :label="$tc('nosto.configuration.account.appTokenTitle')"
                    :help-text="$tc('nosto.configuration.account.appTokenHelpText')"
                    :error="hasError(currentConfig['appToken'])"
                    required
                    name="appToken"
                    @update:value="onUpdateValue('appToken', $event)"
                />
                <sw-password-field
                    :value="currentConfig['searchToken']"
                    :label="$tc('nosto.configuration.account.searchTokenTitle')"
                    :help-text="$tc('nosto.configuration.account.searchTokenHelpText')"
                    :error="hasError(currentConfig['searchToken'])"
                    required
                    name="searchToken"
                    @update:value="onUpdateValue('searchToken', $event)"
                />
            {% endblock %}
        </template>
        <template v-else>
            <h6>{{ $tc('nosto.selectSalesChannelAndLanguage') }}</h6>
        </template>
    </sw-card>
{% endblock %}
