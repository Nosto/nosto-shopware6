{% block od_nosto_integration_category_tagging %}

    {% set category = page.header.navigation.active %}

    {% if category %}
        <div class="nosto_category" style="display:none">{% apply spaceless %}
                {% for item in sw_breadcrumb_full(category, context.context) %}
                    {% if loop.first %}/{% endif %}{{ item.translated.name }}{% if loop.last is not true %}/{% endif %}
                {% endfor %}
            {% endapply %}</div>
    {% endif %}

{% endblock %}