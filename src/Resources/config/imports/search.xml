<?xml version="1.0" ?>

<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://symfony.com/schema/dic/services"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service
                id="Nosto\NostoIntegration\Decorator\Core\Content\Product\SalesChannel\Listing\ProductListingFeaturesSubscriber"
                decorates="Shopware\Core\Content\Product\SalesChannel\Listing\ProductListingFeaturesSubscriber"
                public="true"
                autowire="true"
        />

        <service
            id="Nosto\NostoIntegration\Decorator\Storefront\Controller\SearchController"
            decorates="Shopware\Storefront\Controller\SearchController"
            public="true"
            autowire="true"
        >
            <call method="setTwig">
                <argument type="service" id="twig"/>
            </call>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service
            id="Nosto\NostoIntegration\Decorator\Storefront\Page\Search\SearchPageLoader"
            decorates="Shopware\Storefront\Page\Search\SearchPageLoader"
            public="true"
            autowire="true"
        >
            <argument
                type="service"
                key="$productSearchRoute"
                id="Nosto\NostoIntegration\Decorator\Core\Content\Product\SalesChannel\Search\ProductSearchRoute"
                on-invalid="null"
            />
        </service>

        <service
            id="Nosto\NostoIntegration\Decorator\Core\Content\Product\SalesChannel\Search\ProductSearchRoute"
            decorates="Shopware\Core\Content\Product\SalesChannel\Search\ProductSearchRoute"
            decoration-on-invalid="ignore"
            autowire="true"
        >
            <argument type="service" key="$salesChannelProductRepository" id="sales_channel.product.repository" />
        </service>

        <service
                id="Nosto\NostoIntegration\Decorator\Core\Content\Product\SearchKeyword\ProductSearchBuilder"
                decorates="Shopware\Core\Content\Product\SearchKeyword\ProductSearchBuilderInterface"
                autowire="true"
        >
            <argument type="service" key="$interpreter" id="Shopware\Core\Content\Product\SearchKeyword\ProductSearchTermInterpreter" />
        </service>

        <service
            id="Nosto\NostoIntegration\Decorator\Elasticsearch\Product\ProductSearchBuilder"
            decorates="Shopware\Elasticsearch\Product\ProductSearchBuilder"
            decoration-priority="-51000"
            autowire="true"
        />

        <service id="Nosto\NostoIntegration\Search\Api\SearchService" autowire="true">
            <argument key="$categoryRepository" type="service" id="category.repository" />
        </service>

        <service id="Nosto\NostoIntegration\Search\Api\SortingService" autowire="true" />
        <service id="Nosto\NostoIntegration\Search\Api\PaginationService" />
        <service id="Nosto\NostoIntegration\Search\Request\Handler\SortingHandlerService" />
        <service id="Nosto\NostoIntegration\Search\Request\Handler\FilterHandler" />
    </services>
</container>