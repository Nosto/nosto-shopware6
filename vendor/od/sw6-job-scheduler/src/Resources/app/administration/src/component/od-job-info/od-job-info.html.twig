{% block od_job_info_base %}
    <sw-card-section v-if="jobItem">
        {% block job_info_overview_columns %}
            <sw-container
                    columns="repeat(auto-fit, minmax(250px, 1fr))"
                    gap="30px 30px">
                {% block job_info_overview_left_column %}
                    <sw-description-list
                            columns="1fr"
                            grid="1fr">
                        {% block job_info_overview_name %}
                            <dt>{{ $tc('job-listing.page.listing.grid.column.name') }}</dt>
                            <dd>
                                <sw-order-inline-field v-if="jobItem.name"
                                                       :display-value="jobItem.name"
                                                       :value="jobItem.name"
                                                       :editable="false"
                                />
                            </dd>
                        {% endblock %}
                        {% block job_info_overview_status %}
                            <dt>{{ $tc('job-listing.page.listing.grid.column.status') }}</dt>
                            <dd>
                                <template>
                                    <od-job-status-badge :status="jobItem.status">
                                    </od-job-status-badge>
                                    {{ $tc('job-listing.page.listing.grid.job-status.' + jobItem.status) }}
                                </template>
                            </dd>
                        {% endblock %}
                        {% block job_info_overview_startedAt %}
                            <dt>{{ $tc('job-listing.page.listing.grid.column.started-at') }}</dt>
                            <dd>
                                <sw-order-inline-field v-if="jobItem.startedAt"
                                                       :display-value="jobItem.startedAt|date()"
                                                       :value="jobItem.startedAt|date()"
                                                       :editable="false"
                                />
                            </dd>
                        {% endblock %}
                    </sw-description-list>
                {% endblock %}
                {% block od_job_info_overview_right_column %}
                    <sw-description-list
                            columns="1fr"
                            grid="1fr" class="od-job-user-card__summary-vertical">
                        {% block job_detail_base_overview_type %}
                            <dt>{{ $tc('job-listing.page.listing.grid.column.type') }}</dt>
                            <dd>
                                <sw-order-inline-field v-if="jobItem.type"
                                                       :display-value="jobItem.type"
                                                       :value="jobItem.type"
                                                       :editable="false"
                                />
                            </dd>
                        {% endblock %}
                        {% block job_info_overview_createdAt %}
                            <dt>{{ $tc('job-listing.page.listing.grid.column.created-at') }}</dt>
                            <dd>
                                <sw-order-inline-field v-if="jobItem.createdAt"
                                                       :display-value="jobItem.createdAt|date()"
                                                       :value="jobItem.startedAt|date()"
                                                       :editable="false"/>
                            </dd>
                        {% endblock %}
                        {% block job_info_overview_finishedAt %}
                            <dt>{{ $tc('job-listing.page.listing.grid.column.finished-at') }}</dt>
                            <dd>
                                <sw-order-inline-field v-if="jobItem.finishedAt"
                                                       :display-value="jobItem.finishedAt|date()"
                                                       :value="jobItem.finishedAt|date()"
                                                       :editable="false"/>
                            </dd>
                        {% endblock %}
                    </sw-description-list>
                {% endblock %}
            </sw-container>
        {% endblock %}
    </sw-card-section>
{% endblock %}